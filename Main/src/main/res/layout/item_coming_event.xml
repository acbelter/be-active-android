<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="@dimen/new_event_image_preview_size"
        android:layout_height="@dimen/new_event_image_preview_size"
        android:layout_margin="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/test_image"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="16sp"
            tools:text="Invited lecture on Physics"/>

        <TextView
            android:id="@+id/owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            tools:text="Einstein A."/>

        <TextView
            android:id="@+id/datetime_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/owner"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            tools:text="March 5th, 18:30-19:50"/>

        <TextView
            android:id="@+id/add_event_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datetime_description"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:textSize="14sp"
            android:text="@string/add_to_schedule"
            android:textColor="@color/holo_blue_light"
            android:layout_marginBottom="2dp"/>
    </RelativeLayout>
</LinearLayout>