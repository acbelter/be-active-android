<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:schedule="http://schemas.android.com/apk/lib/com.acbelter.scheduleview"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.acbelter.scheduleview.ScheduleView
        android:id="@+id/schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        schedule:itemPaddingLeft="8dp"
        schedule:itemPaddingRight="8dp"
        schedule:internalPaddingTop="8dp"
        schedule:internalPaddingBottom="8dp"
        schedule:timeMarksDistance="40dp"/>
</LinearLayout>