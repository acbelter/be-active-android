<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.beactive">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".core.BeActiveApplication"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:allowBackup="true">

        <service
            android:name="com.acbelter.nslib.NetworkService"
            android:exported="false"/>

        <activity
            android:name=".schedule.ScheduleActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".destination.SelectDestinationActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".newevent.NewEventActivity"
            android:label="@string/events">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".schedule.ScheduleActivity"/>
        </activity>
    </application>
</manifest>
